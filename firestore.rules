rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    // Funciones base para obtener los datos del usuario actual
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function getUserRole() {
      return getUserData().role;
    }

    function getUserTenantId() {
      return getUserData().tenantId;
    }

    function isOwner() {
      return isAuthenticated() && getUserRole() == 'owner';
    }

    // Validaciones Multi-Tenant
    function isSameTenant() {
      return resource.data.tenantId == getUserTenantId();
    }

    function isCreatingSameTenant() {
      return request.resource.data.tenantId == getUserTenantId();
    }

    // --- REGLAS POR COLECCIÓN ---

    match /users/{userId} {
      // Un usuario puede leer su propio perfil o perfiles de su mismo tenant
      allow read: if isAuthenticated() && (userId == request.auth.uid || isSameTenant());
      allow write: if isOwner() && (userId == request.auth.uid || isSameTenant()); 
    }

    match /services/{serviceId} {
      allow read: if isAuthenticated() && isSameTenant();
      allow create: if isAuthenticated() && isCreatingSameTenant();
      allow update, delete: if isOwner() && isSameTenant();
    }

    match /expenses/{expenseId} {
      allow read: if isAuthenticated() && isSameTenant();
      allow create: if isAuthenticated() && isCreatingSameTenant();
      allow update, delete: if isOwner() && isSameTenant();
    }

    match /clients/{clientId} {
      allow read: if isAuthenticated() && isSameTenant();
      allow create: if isAuthenticated() && isCreatingSameTenant();
      allow update: if isAuthenticated() && isSameTenant();
      allow delete: if isOwner() && isSameTenant();
    }

    // Unified inventory collection (replaces consumables and chemical_products)
    match /inventory/{id} {
      allow read: if isAuthenticated() && isSameTenant();
      allow create: if isAuthenticated() && isCreatingSameTenant();
      allow update: if isAuthenticated() && isSameTenant() && isCreatingSameTenant();
      allow delete: if isOwner() && isSameTenant();

      // Inventory history subcollection
      match /history/{historyId} {
        allow read: if isAuthenticated();
        allow write: if isAuthenticated();
      }
    }

    match /catalog_services/{id} {
      allow read: if isAuthenticated() && isSameTenant();
      // Write requires owner AND same tenant — prevents cross-tenant catalog writes
      allow create: if isOwner() && isCreatingSameTenant();
      allow update, delete: if isOwner() && isSameTenant();
    }

    match /catalog_extras/{id} {
      allow read: if isAuthenticated() && isSameTenant();
      allow create: if isOwner() && isCreatingSameTenant();
      allow update, delete: if isOwner() && isSameTenant();
    }

    match /meta/{docId} {
      allow read: if isAuthenticated();
      allow write: if isOwner();
    }

    // Regla de denegación total por defecto — ninguna colección no listada es accesible
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
